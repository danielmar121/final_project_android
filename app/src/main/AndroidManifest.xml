<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daniel.final_project">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".activities.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Final_project">

        <activity
            android:name=".activities.LandingPageActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SignUpActivity" />

        <activity
            android:name=".activities.buyer.BuyerMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.buyer.ui.cart.BuyerPaymentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.buyer.ui.shops.ShopBuyer"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.supplier.SupplierMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.supplier.SupplierSignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.supplier.SupplierAddingProductActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.shared.orders.ProductsOrderActivity"
            android:screenOrientation="portrait" />

    </application>
</manifest>